name: Workflows CI

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]

env: 
  CARGO_TERM_COLOR: always
  RUSTFLAGS: "-Dwarnings"

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v3
    - name: Run Fmt
       run: cargo fmt --all -- --check
    - name: Run Build
       run: cargo check --release --verbose
    - name: run Clippy
       run: cargo clippy
